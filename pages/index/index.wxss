/**index.wxss**/

.swiperImg{
  width: 99%;
  height:500rpx;
}

.shop-list{
  width:100%;
  position: relative;
  height:180rpx;
  padding:30rpx 20rpx;
  box-sizing: border-box;
  background:#fff;
}
.shop-img{
  float:left;
  overflow:hidden;
}

.shop-img{
  width:120rpx;
  height:120rpx;
  margin-left:10rpx;
  margin-right:20rpx;
  border-radius: 5%;
}

.shop-img image{
  width:100%;
  height:100%;
}
.shop-right{
  float:right;
  width:570rpx;
  height:120rpx;
  overflow:hidden;
  box-sizing: border-box;
}
.now-title{
  font-size: 16px;
  line-height: 22px;
  margin-bottom: 5rpx;
}
.evaluate{
  font-size: 10px;
  color:#666;
  line-height: 16px;
}
.describe{
  font-size: 10px;
  color:#666;
  line-height: 25px;
}
.shoplisttitle{
  font-size: 15px;
  color:#666;
  line-height: 12px;
  margin: 20rpx 0rpx;
}
.shoplist{
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  border-bottom: 1px solid #eee;
  display: flex;
}


.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}
