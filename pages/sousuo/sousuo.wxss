      text-align: center;  
    }  

    .shop-list{
  width:100%;
  position: relative;
  height:180rpx;
  padding:30rpx 20rpx;
  box-sizing: border-box;
  background:#fff;
}
.shop-img{
  float:left;
  width:120rpx;
  height:120rpx;
  overflow:hidden;
}
.shop-img image{
  width:100%;
  height:100%;
}
.shop-right{
  float:right;
  width:570rpx;
  height:120rpx;
  overflow:hidden;
  box-sizing: border-box;
}
.now-title{
  font-size: 16px;
  line-height: 22px;
}
.evaluate{
  font-size: 10px;
  color:#666;
  line-height: 10px;
}
.describe{
  font-size: 10px;
  color:#666;
  line-height: 12px;
}
.shoplisttitle{
  font-size: 15px;
  color:#666;
  line-height: 12px;
}
.shoplist{
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  border-bottom: 1px solid #eee;
  display: flex;
}